<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ProfileQuestionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:text="Preguntas Adicionales"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewQ1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="¿Tienes alergias en comidas en general?"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/spinnerAllergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/allergies_options"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/textViewQ1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewQ2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="¿Qué tipo de alimentación tienes?"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerAllergies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/spinnerDietType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/diet_options"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/textViewQ2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewQ3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="¿Qué género tienes?"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerDietType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/gender_options"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/textViewQ3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/layoutPregnancy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spinnerGender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textViewQ4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Estás embarazada o en lactancia?"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp" />

                <Spinner
                    android:id="@+id/spinnerPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:entries="@array/pregnancy_options"
                    android:layout_marginTop="8dp"
                    android:padding="12dp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:padding="12dp"
                android:text="CONTINUAR"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutPregnancy"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>