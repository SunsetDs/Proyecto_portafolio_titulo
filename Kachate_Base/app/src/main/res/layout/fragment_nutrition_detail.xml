<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        tools:context=".NutritionDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#303030"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp"
                        tools:text="Papas Fritas Kryzpo Sabor Original" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#424242" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca:"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_marca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp"
                        tools:text="Kryzpo" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#424242" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto OCR (Muestra):"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_presentacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp"
                        tools:text="Texto crudo capturado..." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#303030"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Nutricional 100g"
                        android:textColor="#00BFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Energía (kcal)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_energia_value" tools:text="507 kcal"/>
                    </LinearLayout>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Grasas Totales (g)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_grasas_totales_value" tools:text="28.0 g"/>
                    </LinearLayout>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Grasa Saturada (g)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_grasas_saturadas_value" tools:text="2.5 g"/>
                    </LinearLayout>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Carbohidratos (g)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_carbohidratos_value" tools:text="58.0 g"/>
                    </LinearLayout>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Azúcares (g)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_azucares_value" tools:text="0.5 g"/>
                    </LinearLayout>

                    <LinearLayout style="@style/NutritionRow">
                        <TextView style="@style/NutritionLabel" android:text="Sodio (mg)"/>
                        <TextView style="@style/NutritionValue" android:id="@+id/tv_sodio_value" tools:text="550 mg"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#303030"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredientes Resaltados (Análisis)"
                        android:textColor="#00BFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sal y Sodio"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_sal_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        tools:text="Contiene sal (cloruro de sodio)." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aceites Críticos"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_aceite_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        tools:text="Contiene Aceite de Palma." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Azúcares Añadidos"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_glucosa_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        tools:text="Contiene jarabe de glucosa." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Es apto para veganos? 🌿"
                        android:textColor="#00BFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tv_vegan_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp"
                        tools:text="PROBABLEMENTE NO APTO."/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>